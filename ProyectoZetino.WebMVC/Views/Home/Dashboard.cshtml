@{
    ViewData["Title"] = "Dashboard";
}

<div classclass="row">
    <div class="col">
        <h1 class="h3 mb-1" style="color: #0b5e6f;">Panel de Control</h1>
        <p class="mb-4 text-muted">Resumen general del sistema y accesos directos.</p>
    </div>
</div>

<div class="row">

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-primary shadow-sm h-100 py-2 rounded-3">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs fw-bold text-primary text-uppercase mb-1">
                            Seguridad
                        </div>
                        <div class="h5 mb-0 fw-bold text-gray-800">Gestión de Roles</div>
                    </div>
                    <div class="col-auto">
                        <i class="bi bi-shield-lock-fill fs-2 text-gray-300"></i>
                    </div>
                </div>
                <a href="@Url.Action("Index", "Rol")" class="stretched-link" title="Ir a Roles"></a>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-success shadow-sm h-100 py-2 rounded-3">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs fw-bold text-success text-uppercase mb-1">
                            Personal
                        </div>
                        <div class="h5 mb-0 fw-bold text-gray-800">Administrar Usuarios</div>
                    </div>
                    <div class="col-auto">
                        <i class="bi bi-people-fill fs-2 text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-info shadow-sm h-100 py-2 rounded-3">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs fw-bold text-info text-uppercase mb-1">
                            Pacientes (API)
                        </div>
                        <div class="h5 mb-0 fw-bold text-gray-800">0 Registrados Hoy</div>
                    </div>
                    <div class="col-auto">
                        <i class="bi bi-person-vcard-fill fs-2 text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-warning shadow-sm h-100 py-2 rounded-3">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs fw-bold text-warning text-uppercase mb-1">
                            Exámenes (API)
                        </div>
                        <div class="h5 mb-0 fw-bold text-gray-800">0 Pendientes</div>
                    </div>
                    <div class="col-auto">
                        <i class="bi bi-hourglass-split fs-2 text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">

    <div class="col-lg-7 mb-4">
        <div class="card shadow-sm h-100 rounded-3">
            <div class="card-header py-3" style="background-color: #f8f9fa;">
                <h6 class="m-0 fw-bold text-primary">Acceso Rápido al CRUD</h6>
            </div>
            <div class="card-body d-flex flex-column justify-content-center">
                <p class="text-muted">Utilice estos enlaces para navegar a las secciones principales de su CRUD.</p>
                <div class="d-grid gap-2 d-md-flex">
                    <a href="@Url.Action("Index", "Rol")" class="btn btn-primary btn-icon-split">
                        <span class="icon text-white-50"><i class="bi bi-shield-lock"></i></span>
                        <span class="text">Administrar Roles</span>
                    </a>

                    <a href="#" class="btn btn-success btn-icon-split">
                        <span class="icon text-white-50"><i class="bi bi-people"></i></span>
                        <span class="text">Administrar Usuarios</span>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-5 mb-4">
        <div class="card shadow-sm h-100 rounded-3" style="background-color: #f7fbfd; border: 0;">
            <div class="card-body p-4 text-center d-flex flex-column justify-content-center">

                <h5 class="fw-bold mt-3" style="color: #0b5e6f;">¡Bienvenido de nuevo!</h5>
                <p class="text-muted small">
                    Ha iniciado sesión en el panel de <strong>Laboratorio Zetino</strong>.
                </p>
                <p class="text-muted small mb-0">
                    Recuerde cerrar su sesión al terminar de usar la aplicación.
                </p>
            </div>
        </div>
    </div>
</div>

<style>
    /* Clases de borde (no vienen en Bootstrap 5 por defecto) */
    .border-left-primary {
        border-left: .25rem solid #4e73df !important;
    }

    .border-left-success {
        border-left: .25rem solid #1cc88a !important;
    }

    .border-left-info {
        border-left: .25rem solid #36b9cc !important;
    }

    .border-left-warning {
        border-left: .25rem solid #f6c23e !important;
    }

    .text-gray-300 {
        color: #dddfeb !important;
    }

    .text-gray-800 {
        color: #5a5c69 !important;
    }

    .text-xs {
        font-size: .7rem;
    }

    /* Estilo para los botones con ícono */
    .btn-icon-split {
        display: inline-flex;
        align-items: center;
        padding: 0; /* Quitamos padding al botón principal */
    }

        .btn-icon-split .icon {
            padding: 0.5rem 0.6rem;
            background: rgba(0,0,0,0.1); /* Sombra ligera para el ícono */
            border-top-left-radius: 0.25rem;
            border-bottom-left-radius: 0.25rem;
        }

        .btn-icon-split .text {
            padding: 0.5rem 1rem; /* Padding solo al texto */
        }
</style>