<!-- ======================================= -->
<!-- ESTILOS PERSONALIZADOS -->
<!-- ======================================= -->
<style>
    /* COLORES BASE */
    .text-teal {
        color: #0b5e6f;
    }

    .btn-lab-primary {
        background-color: #0b5e6f;
        border-color: #0b5e6f;
        color: #ffffff;
    }

        .btn-lab-primary:hover,
        .btn-lab-primary:focus {
            background-color: #094c59;
            border-color: #094c59;
            color: #ffffff;
        }

    /* HERO con imagen de fondo tipo Analiza */
    .hero-lab {
        position: relative;
        min-height: 75vh;
        color: #ffffff;
        display: flex;
        align-items: center;
        background-image: linear-gradient(90deg, rgba(3, 43, 53, 0.85) 0%, rgba(3, 43, 53, 0.65) 40%, rgba(3, 43, 53, 0.20) 100%), url('/images/fondo.jpg'); /* tu imagen de fondo */
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
    }

    /* Ajuste de textos sobre imagen */
    .hero-title {
        font-size: clamp(2.4rem, 3.2vw + 1rem, 3.4rem);
        font-weight: 800;
        color: #ffffff;
        letter-spacing: 0.02em;
    }

    .hero-highlight {
        background: none;
        color: #a7f2ff; /* o blanco si prefieres */
    }

    .hero-subtitle {
        font-size: 1.05rem;
        max-width: 36rem;
        color: #e4f3f8;
    }

    .hero-secondary-btn {
        border-color: rgba(255, 255, 255, 0.7);
        color: #0b5e6f;
        background-color: #ffffff;
    }

        .hero-secondary-btn:hover {
            background-color: #f5fbff;
            border-color: #ffffff;
        }

    .hero-badges {
        color: #e4f3f8;
    }

    /* SECCIONES GENERALES */
    .section-light {
        background-color: #f5fbff;
    }

    .section-title {
        font-weight: 700;
        color: #0b5e6f;
    }

    .section-subtitle {
        max-width: 32rem;
        margin: 0 auto;
        color: #607b86;
    }

    /* SERVICIOS */
    .service-card {
        position: relative;
        background: #ffffff;
        border-radius: 1.5rem;
        box-shadow: 0 16px 40px rgba(6, 54, 71, 0.05);
        border: 1px solid #e3f3f6;
        transition: transform 0.25s ease, box-shadow 0.25s ease, border-color 0.25s ease;
    }

        .service-card:hover {
            transform: translateY(-6px);
            box-shadow: 0 22px 50px rgba(6, 54, 71, 0.12);
            border-color: #bcdfe6;
        }

    .service-icon-circle {
        width: 64px;
        height: 64px;
        border-radius: 50%;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, #0b5e6f, #0f8da1);
        color: #ffffff;
        font-size: 1.8rem;
    }

    /* CONTACTO */
    .contact-card {
        border-radius: 1.5rem;
    }

    .contact-icon {
        width: 40px;
        height: 40px;
        border-radius: 999px;
        background: #e0f4fa;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #0b5e6f;
        flex-shrink: 0;
    }

    .contact-icon-muted {
        background: #f0f0f0;
        color: #7a7a7a;
    }

    .map-card {
        border-radius: 1.5rem;
    }

    /* ACERCA DE */
    .about-pill {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.35rem 0.9rem;
        border-radius: 999px;
        background: #e7f6fa;
        color: #0b5e6f;
        font-size: 0.9rem;
    }

    .about-figure {
        position: relative;
        min-height: 220px;
    }

    .about-circle {
        position: absolute;
        inset: 10% 15% auto auto;
        width: 160px;
        height: 160px;
        border-radius: 50%;
        background: radial-gradient(circle, #0f8da1 0, #0b5e6f 45%, #032b35 100%);
        opacity: 0.18;
    }

    .about-card {
        position: absolute;
        inset: auto 0 0 auto;
        background: #ffffff;
        border-radius: 1.3rem;
        padding: 1.4rem 1.6rem;
        max-width: 260px;
        border: 1px solid #e3f3f6;
    }

    /* RESPONSIVE PEQUEÑO */
    /* En Razor se escribe @@media para que salga media en el HTML */
    @@media (max-width: 767.98px) {
        .hero-lab .container

    {
        padding-top: 3rem;
    }

    }
</style>
