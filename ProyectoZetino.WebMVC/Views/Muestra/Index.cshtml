@model IEnumerable<ProyectoZetino.WebMVC.Models.MuestraDto>
@{
    ViewData["Title"] = "Gestión de Muestras";
    string filtroActual = ViewData["CurrentFilter"] as string;
}

<div class="card shadow-sm rounded-3">

    <div class="card-header py-3 d-flex flex-wrap justify-content-between align-items-center">
        <h5 class="m-0 fw-bold" style="color: #0b5e6f;">
            <i class="bi bi-vial me-2"></i> Gestión de Muestras
        </h5>
        <a class="btn btn-success btn-icon-split" href="/Muestra/Create">
            <span class="icon text-white-50"><i class="bi bi-plus-circle"></i></span>
            <span class="text">Nueva Muestra</span>
        </a>
    </div>

    <div class="card-body">

        <div class="mb-4">
            <div class="input-group">
                <input id="txtSearch" type="text" class="form-control"
                       placeholder="Filtrar por IDs de Orden o Tipo de Muestra..."
                       value="@filtroActual" />
                <button type="button" class="btn btn-outline-secondary" id="btnClear">
                    <i class="bi bi-x-circle"></i> Limpiar
                </button>
            </div>
            <small class="text-muted">Puedes buscar por los IDs numéricos.</small>
        </div>

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger">@TempData["Error"]</div>
        }

        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Orden Examen (ID)</th>
                        <th>Tipo Muestra (ID)</th>
                        <th>Fecha Recepción</th>
                        <th>Estado</th>
                        <th class="text-end">Acciones</th>
                    </tr>
                </thead>
                <tbody id="muestrasBody">
                    @foreach (var m in Model)
                    {
                        <tr class="@(m.Estado ? "" : "table-secondary text-muted")">
                            <td class="col-orden-id">@m.IdOrdenExamen</td>
                            <td class="col-tipo-id">@m.IdTipoMuestra</td>
                            <td class="col-fecha">@m.FechaRecepcion.ToString("yyyy-MM-dd")</td>
                            <td>
                                @if (m.Estado)
                                {
                                    <span class="badge bg-success-subtle text-success-emphasis rounded-pill">Activo</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger-subtle text-danger-emphasis rounded-pill">Inactivo</span>
                                }
                            </td>
                            <td class="text-end text-nowrap">
                                <a class="btn btn-sm btn-outline-primary" href="/Muestra/Edit/@m.IdMuestra" title="Editar">
                                    <i class="bi bi-pencil-fill"></i>
                                </a>

                                @if (m.Estado)
                                {
                                    <a href="/Muestra/ToggleEstado/@m.IdMuestra" class="btn btn-sm btn-outline-danger" title="Desactivar">
                                        <i class="bi bi-toggle-off"></i>
                                    </a>
                                }
                                else
                                {
                                    <a href="/Muestra/ToggleEstado/@m.IdMuestra" class="btn btn-sm btn-outline-success" title="Activar">
                                        <i class="bi bi-toggle-on"></i>
                                    </a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr id="noRows" style="display:none;">
                        <td colspan="5" class="text-center text-muted">Sin resultados.</td>
                    </tr>
                </tfoot>
            </table>
        </div>

        <nav class="mt-3">
            <ul id="pager" class="pagination pagination-sm justify-content-center mb-0"></ul>
        </nav>

    </div>
</div>

<script>
    (() => {
        const input   = document.getElementById('txtSearch');
        const clear   = document.getElementById('btnClear');
        const tbody   = document.getElementById('muestrasBody'); // <-- CAMBIO
        const noRows  = document.getElementById('noRows');
        const pager   = document.getElementById('pager');

        let page = 1;
        const perPage = 10;

        const N = t => (t || '').toString().toLowerCase().normalize('NFD').replace(/[\u0300-\u036f]/g,'');

        function getVisibleRows(){
            const q = N(input.value.trim());
            const rows = Array.from(tbody.rows);
            rows.forEach(tr => {
                // Adaptamos a las nuevas columnas
                const ordenId = N(tr.querySelector('.col-orden-id')?.textContent);
                const tipoId  = N(tr.querySelector('.col-tipo-id')?.textContent);

                const show = !q || (ordenId && ordenId.includes(q)) || (tipoId && tipoId.includes(q));
                tr.dataset.visible = show ? '1' : '0';
            });
            return rows.filter(r => r.dataset.visible !== '0');
        }

        // --- El resto del script (renderPage, buildPager, eventos) es idéntico ---
        // ... (No es necesario repetirlo, solo pégalo tal cual)

        function renderPage(){
            const visibles = getVisibleRows();
            const total = visibles.length;
            const totalPages = Math.max(1, Math.ceil(total / perPage));
            if (page > totalPages) page = totalPages;
            Array.from(tbody.rows).forEach(r => r.style.display = 'none');
            const start = (page - 1) * perPage;
            visibles.slice(start, start + perPage).forEach(r => r.style.display = '');
            noRows.style.display = total === 0 ? '' : 'none';
            buildPager(totalPages);
        }

        function buildPager(totalPages){
            pager.innerHTML = '';
            if (totalPages <= 1) return;
            const addItem = (label, disabled, active, goTo) => {
                const li = document.createElement('li');
                li.className = `page-item${disabled ? ' disabled' : ''}${active ? ' active' : ''}`;
                const a = document.createElement('a');
                a.className = 'page-link';
                a.href = '#';
                a.textContent = label;
                if (!disabled && !active) {
                    a.addEventListener('click', e => { e.preventDefault(); page = goTo; renderPage(); });
                }
                li.appendChild(a);
                pager.appendChild(li);
            };
            addItem('«', page === 1, false, page - 1);
            const windowSize = 7;
            let start = Math.max(1, page - Math.floor(windowSize / 2));
            let end   = Math.min(totalPages, start + windowSize - 1);
            start     = Math.max(1, end - windowSize + 1);
            for (let i = start; i <= end; i++) addItem(i.toString(), false, i === page, i);
            addItem('»', page === totalPages, false, page + 1);
        }

        input.addEventListener('input', () => { page = 1; renderPage(); });
        clear.addEventListener('click', () => { input.value = ''; page = 1; renderPage(); input.focus(); });
        renderPage();
    })();
</script>