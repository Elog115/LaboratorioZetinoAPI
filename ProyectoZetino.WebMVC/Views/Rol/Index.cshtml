@model IEnumerable<ProyectoZetino.WebMVC.Models.RolDto>
@{
    ViewData["Title"] = "Gestión de Roles";
}
<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Gestión de Roles</h2>
    <a class="btn btn-success" href="/Rol/Create">Nuevo Rol</a>
</div>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<table class="table table-striped table-hover align-middle">
    <thead class="table-dark">
        <tr>
            <th>Id</th>
            <th>Nombre</th>
            <th>Descripcion</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var r in Model)
        {
            @* ?? CORREGIDO: Cambiamos 'table-danger' por 'table-secondary' (gris) ?? *@
            <tr class="@(r.Estado ? "" : "table-secondary text-muted")">
                <td>@r.IdRol</td>
                <td>@r.Nombre</td>
                <td>@r.Descripcion</td>

                <td>
                    @if (r.Estado)
                    {
                        <span class="badge bg-success">Activo</span>
                    }
                    else
                    {
                        @* El badge se mantiene rojo (bg-danger) *@
                        <span class="badge bg-danger">Inactivo</span>
                    }
                </td>

                <td class="text-nowrap">

                    <a class="btn btn-sm btn-outline-primary" href="/Rol/Edit/@r.IdRol">Editar</a>

                    @if (r.Estado)
                    {
                        @* El botón se mantiene rojo (btn-outline-danger) *@
                        <a href="/Rol/ToggleEstado/@r.IdRol" class="btn btn-sm btn-outline-danger">
                            Desactivar
                        </a>
                    }
                    else
                    {
                        <a href="/Rol/ToggleEstado/@r.IdRol" class="btn btn-sm btn-outline-success">
                            Activar
                        </a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>