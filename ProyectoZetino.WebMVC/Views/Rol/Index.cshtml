@model IEnumerable<ProyectoZetino.WebMVC.Models.RolDto>
@{
    ViewData["Title"] = "Gestión de Roles";
    // Usamos ViewData para que el buscador "recuerde" lo que se buscó
    string filtroActual = ViewData["CurrentFilter"] as string;
}

<div class="card shadow-sm rounded-3">

    <div class="card-header py-3 d-flex flex-wrap justify-content-between align-items-center">
        <h5 class="m-0 fw-bold" style="color: #0b5e6f;">
            <i class="bi bi-shield-lock-fill me-2"></i>
            Gestión de Roles
        </h5>
        <a class="btn btn-success btn-icon-split" href="/Rol/Create">
            <span class="icon text-white-50"><i class="bi bi-plus-circle"></i></span>
            <span class="text">Nuevo Rol</span>
        </a>
    </div>

    <div class="card-body">

        <form asp-action="Index" method="get" class="mb-4">
            <div class="input-group">
                <input type="text" name="searchTerm" class="form-control"
                       placeholder="Buscar por nombre, descripción..."
                       value="@filtroActual" />

                <button class="btn btn-primary" type="submit">
                    <i class="bi bi-search"></i> Buscar
                </button>

                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-x-circle"></i> Limpiar
                </a>
            </div>
        </form>

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger">@TempData["Error"]</div>
        }

        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Nombre</th>
                        <th>Descripción</th>
                        <th>Estado</th>
                        <th class="text-end">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var r in Model)
                    {
                        <tr class="@(r.Estado ? "" : "table-secondary text-muted")">
                            <td>@r.Nombre</td>
                            <td>@r.Descripcion</td>
                            <td>
                                @if (r.Estado)
                                {
                                    <span class="badge bg-success-subtle text-success-emphasis rounded-pill">Activo</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger-subtle text-danger-emphasis rounded-pill">Inactivo</span>
                                }
                            </td>
                            <td class="text-end text-nowrap">
                                <a class="btn btn-sm btn-outline-primary" href="/Rol/Edit/@r.IdRol" title="Editar">
                                    <i class="bi bi-pencil-fill"></i>
                                </a>

                                @if (r.Estado)
                                {
                                    <a href="/Rol/ToggleEstado/@r.IdRol" class="btn btn-sm btn-outline-danger" title="Desactivar">
                                        <i class="bi bi-toggle-off"></i>
                                    </a>
                                }
                                else
                                {
                                    <a href="/Rol/ToggleEstado/@r.IdRol" class="btn btn-sm btn-outline-success" title="Activar">
                                        <i class="bi bi-toggle-on"></i>
                                    </a>
                                }
                            </td>
                        </tr>
                    }
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="4" class="text-center text-muted">
                                No se encontraron roles.
                                @if (!string.IsNullOrEmpty(filtroActual))
                                {
                                    <span>(Intente limpiar el filtro de búsqueda)</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>