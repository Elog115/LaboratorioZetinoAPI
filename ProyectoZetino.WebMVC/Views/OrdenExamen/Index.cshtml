@model IEnumerable<ProyectoZetino.WebMVC.Models.OrdenExamenDto>

@{
    ViewData["Title"] = "Gestión de Órdenes de Examen";
    string filtroActual = ViewData["CurrentFilter"] as string;
}

<div class="card shadow-sm rounded-3">

    <div class="card-header py-3 d-flex justify-content-between align-items-center flex-wrap">
        <h5 class="m-0 fw-bold text-primary">
            <i class="bi bi-clipboard2-pulse me-2"></i> Gestión de Órdenes de Examen
        </h5>
        <a class="btn btn-success" href="/OrdenExamen/Create">
            <i class="bi bi-plus-circle"></i> Nueva Orden
        </a>
    </div>

    <div class="card-body">
        <div class="mb-4">
            <div class="input-group">
                <input id="txtSearch" type="text" name="searchTerm" class="form-control"
                       placeholder="Buscar por paciente o ID..."
                       value="@filtroActual" />
                <button class="btn btn-outline-secondary" id="btnClear">
                    <i class="bi bi-x-circle"></i> Limpiar
                </button>
            </div>
        </div>

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger">@TempData["Error"]</div>
        }

        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>ID Orden</th>
                        <th>Paciente</th>
                        <th>Cita</th>
                        <th>Fecha Solicitud</th>
                        <th>Estado</th>
                        <th class="text-end">Acciones</th>
                    </tr>
                </thead>
                <tbody id="ordenesBody">
                    @foreach (var o in Model)
                    {
                        <tr class="@(o.Estado ? "" : "table-secondary text-muted")">
                            <td>@o.IdOrdenExamen</td>
                            <td>@o.NombreUsuario</td>
                            <td>@o.IdCita</td>
                            <td>@o.FechaSolicitud.ToString("dd/MM/yyyy")</td>
                            <td>
                                @if (o.Estado)
                                {
                                    <span class="badge bg-success-subtle text-success-emphasis">Activa</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger-subtle text-danger-emphasis">Inactiva</span>
                                }
                            </td>
                            <td class="text-end text-nowrap">
                                <a class="btn btn-sm btn-outline-primary me-1" href="/OrdenExamen/Edit/@o.IdOrdenExamen" title="Editar">
                                    <i class="bi bi-pencil-fill"></i>
                                </a>
                                <a class="btn btn-sm btn-outline-danger" href="/OrdenExamen/Delete/@o.IdOrdenExamen" title="Eliminar">
                                    <i class="bi bi-trash-fill"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script>
    (() => {
        const input = document.getElementById('txtSearch');
        const clear = document.getElementById('btnClear');
        const tbody = document.getElementById('ordenesBody');

        const N = t => (t || '').toLowerCase().normalize('NFD').replace(/[\u0300-\u036f]/g,'');

        input.addEventListener('input', () => {
            const q = N(input.value);
            Array.from(tbody.rows).forEach(tr => {
                const text = N(tr.textContent);
                tr.style.display = !q || text.includes(q) ? '' : 'none';
            });
        });

        clear.addEventListener('click', () => { input.value = ''; input.dispatchEvent(new Event('input')); });
    })();
</script>

