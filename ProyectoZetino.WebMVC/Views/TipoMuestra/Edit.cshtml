@model ProyectoZetino.WebMVC.Models.TipoMuestraDto
@{
    ViewData["Title"] = "Editar Tipo de Muestra";
}

<div class="card shadow-sm rounded-3">
    <div class="card-header py-3">
        <h5 class="m-0 fw-bold" style="color: #0b5e6f;">
            <i class="bi bi-pencil-fill me-2"></i>
            Editar Tipo de Muestra
        </h5>
    </div>
    <div class="card-body">

        <form asp-action="Edit" class="mt-3">

            <input type="hidden" asp-for="IdTipoMuestra" />
            <input type="hidden" asp-for="Estado" />

            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

            <div class="mb-3">
                <label asp-for="Nombre" class="form-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Descripcion" class="form-label"></label>
                <textarea asp-for="Descripcion" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>

            <div class="pt-3">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-save-fill me-1"></i> Guardar Cambios
                </button>
                <a class="btn btn-secondary" href="/TipoMuestra">
                    <i class="bi bi-x-circle me-1"></i> Cancelar
                </a>
            </div>

        </form>

    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}