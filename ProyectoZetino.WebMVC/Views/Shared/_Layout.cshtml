@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Laboratorio Zetino</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- CSS del sitio -->
    <link href="~/css/site.css" rel="stylesheet" />

    <!-- Iconos -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>

<body style="background-color: #f7fbfd;">
    <!-- NAV SUPERIOR -->
    <nav class="navbar navbar-expand-lg" style="background: linear-gradient(90deg,#e8f7f5,#eaf3ff);">
        <div class="container-fluid">
            <a class="navbar-brand d-flex align-items-center" href="/Home/Dashboard">
                <img src="~/images/logo.svg" alt="logo" style="height:36px;margin-right:8px" />
                <span style="font-weight:700; color:#0b5e6f">Laboratorio Zetino</span>
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#nav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="nav">
                <ul class="navbar-nav ms-auto">
                    @if (HttpContextAccessor.HttpContext.Request.Cookies.ContainsKey("AuthToken"))
                    {
                        <li class="nav-item">
                            <form method="post" action="/Account/Logout" class="d-inline">
                                <button class="btn btn-link nav-link">Cerrar sesión</button>
                            </form>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item"><a class="nav-link" href="/Account/Login">Login</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Account/Register">Registro</a></li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <!-- CONTENEDOR PRINCIPAL -->
    <div class="container-fluid">
        @if (HttpContextAccessor.HttpContext.Request.Cookies.ContainsKey("AuthToken"))
        {
            <div class="row">
                <!-- SIDEBAR -->
                <div class="col-md-2 p-3 shadow-sm"
                     style="background:#ffffff; border-right:1px solid #e6eef8; min-height:100vh;">

                    <style>
                        .sidebar-link {
                            padding: 10px 12px;
                            border-radius: 8px;
                            color: #0b4f59 !important;
                            font-weight: 500;
                            display: flex;
                            align-items: center;
                            transition: all .2s;
                            text-decoration: none;
                        }

                            .sidebar-link i {
                                font-size: 1.1rem;
                                min-width: 20px;
                                text-align: center;
                            }

                            .sidebar-link:hover {
                                background: #e8f7fa;
                                color: #087d8a !important;
                                transform: translateX(3px);
                            }

                        .submenu .sidebar-link {
                            padding-left: 32px;
                            font-size: .95rem;
                        }

                            .submenu .sidebar-link:hover {
                                background: #eefaff;
                            }

                        .sidebar-title {
                            font-size: .75rem;
                            text-transform: uppercase;
                            font-weight: bold;
                            margin: 14px 4px 6px;
                            color: #6c8793;
                        }
                    </style>

                    <ul class="nav flex-column">

                        <!-- Dashboard -->
                        <li class="nav-item mb-1">
                            <a class="sidebar-link" href="/Home/Dashboard">
                                <i class="bi bi-speedometer2 me-2"></i> Dashboard
                            </a>
                        </li>

                        <!-- Usuarios -->
                        <li class="nav-item mb-1">
                            <a class="sidebar-link" href="/Usuario">
                                <i class="bi bi-people me-2"></i> Usuarios
                            </a>
                        </li>

                        <!-- Roles -->
                        <li class="nav-item mb-1">
                            <a class="sidebar-link" href="/Rol">
                                <i class="bi bi-shield-lock me-2"></i> Roles
                            </a>
                        </li>

                        <!-- Citas -->
                        <li class="nav-item mb-1">
                            <a class="sidebar-link" href="/Cita">
                                <i class="bi bi-calendar2-check me-2"></i> Citas
                            </a>
                        </li>

                        <!-- Título sección -->
                        <li class="nav-item">
                            <div class="sidebar-title">Laboratorio</div>
                        </li>

                        <!-- Submenú Laboratorio -->
                        <li class="nav-item mb-2">
                            <a class="sidebar-link" data-bs-toggle="collapse" href="#submenuLab" role="button">
                                <i class="bi bi-flask me-2"></i> Módulos
                                <i class="bi bi-chevron-down ms-auto"></i>
                            </a>

                            <div class="collapse submenu" id="submenuLab">

                                <a class="sidebar-link" href="/OrdenExamen">
                                    <i class="bi bi-receipt me-2"></i> Orden de Examen
                                </a>

                                <a class="sidebar-link" href="/TipoExamen">
                                    <i class="bi bi-list-check me-2"></i> Tipos de Examen
                                </a>

                                <a class="sidebar-link" href="/Examen">
                                    <i class="bi bi-clipboard2-pulse me-2"></i> Exámenes
                                </a>

                                <a class="sidebar-link" href="/TipoMuestra">
                                    <i class="bi bi-beaker me-2"></i> Tipos de Muestra
                                </a>

                                <a class="sidebar-link" href="/Muestra">
                                    <i class="bi bi-droplet-half me-2"></i> Muestras
                                </a>

                                <a class="sidebar-link" href="/Resultado">
                                    <i class="bi bi-file-medical me-2"></i> Resultados
                                </a>

                                <a class="sidebar-link" href="/NotificacionEmail">
                                    <i class="bi bi-envelope-paper me-2"></i> Monitor de Emails
                                </a>
                            </div>
                        </li>

                    </ul>
                </div>

                <!-- CONTENIDO -->
                <div class="col-md-10 p-4">
                    @RenderBody()
                </div>
            </div>
        }
        else
        {
            <div class="row">
                <div class="col-12 p-0">
                    @RenderBody()
                </div>
            </div>
        }
    </div>

    <!-- FOOTER -->
    <footer class="text-center p-3 mt-4" style="background:#ffffff; border-top:1px solid #e6eef8;">
        &copy; @DateTime.Now.Year - Laboratorio Zetino
    </footer>

    <!-- Scripts base -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Chart.js disponible para el dashboard -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>



