@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProyectoZetino</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body style="background-color: #f7fbfd;">
    <nav class="navbar navbar-expand-lg" style="background: linear-gradient(90deg,#e8f7f5,#eaf3ff);">
        <div class="container-fluid">
            <a class="navbar-brand d-flex align-items-center" href="/">
                <img src="~/images/logo.svg" alt="logo" style="height:36px;margin-right:8px" />
                <span style="font-weight:700; color:#0b5e6f">Laboratorio Zetino</span>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#nav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="nav">
                <ul class="navbar-nav me-auto">
                    @if (HttpContextAccessor.HttpContext.Request.Cookies.ContainsKey("AuthToken"))
                    {
                        <li class="nav-item"><a class="nav-link" href="/Rol">Roles</a></li>
                    }
                </ul>
                <ul class="navbar-nav">
                    @if (HttpContextAccessor.HttpContext.Request.Cookies.ContainsKey("AuthToken"))
                    {
                        <li class="nav-item"><form method="post" action="/Account/Logout" class="d-inline"><button class="btn btn-link nav-link">Cerrar sesiÃ³n</button></form></li>
                    }
                    else
                    {
                        <li class="nav-item"><a class="nav-link" href="/Account/Login">Login</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Account/Register">Registro</a></li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-2 p-3" style="background:#fff; border-right:1px solid #e6eef8; min-height:80vh;">
                <ul class="nav flex-column">
                    <li class="nav-item mb-2"><a class="nav-link" href="/">Inicio</a></li>

                    @if (HttpContextAccessor.HttpContext.Request.Cookies.ContainsKey("AuthToken"))
                    {
                        <li class="nav-item mb-2"><a class="nav-link" href="/Rol">Roles</a></li>
                    }
                </ul>
            </div>
            <div class="col-md-10 p-4">
                @RenderBody()
            </div>
        </div>
    </div>

    <footer class="text-center p-3 mt-4" style="background:#ffffff; border-top:1px solid #e6eef8;">
        &copy; @DateTime.Now.Year - Laboratorio Zetino
    </footer>

    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

