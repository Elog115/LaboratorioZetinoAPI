@model ProyectoZetino.WebMVC.Models.TipoExamenDto
@{
    ViewData["Title"] = "Nuevo Tipo de Examen";
}

<div class="container mt-4">
    <div class="card shadow-sm p-4 rounded-4">
        <h3 class="mb-3 text-primary">
            <i class="bi bi-beaker"></i> Nuevo Tipo de Examen
        </h3>
        <hr />

        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

        <form asp-action="Create" method="post">
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Nombre" class="form-label fw-semibold"></label>
                    <input asp-for="Nombre" class="form-control" placeholder="Ingrese nombre del examen" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="Precio" class="form-label fw-semibold"></label>
                    <input asp-for="Precio" type="number" step="0.01" class="form-control" placeholder="Ingrese precio" />
                    <span asp-validation-for="Precio" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="Descripcion" class="form-label fw-semibold"></label>
                <textarea asp-for="Descripcion" class="form-control" rows="3" placeholder="Ingrese descripción"></textarea>
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>

            <div class="form-check mb-3">
                <input asp-for="Estado" class="form-check-input" type="checkbox" />
                <label asp-for="Estado" class="form-check-label fw-semibold"></label>
            </div>

            <div class="d-flex justify-content-end gap-2 mt-4">
                <button type="submit" class="btn btn-success px-4 rounded-pill shadow-sm">
                    <i class="bi bi-save"></i> Guardar
                </button>
                <a asp-action="Index" class="btn btn-secondary px-4 rounded-pill shadow-sm">
                    <i class="bi bi-x-circle"></i> Cancelar
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

