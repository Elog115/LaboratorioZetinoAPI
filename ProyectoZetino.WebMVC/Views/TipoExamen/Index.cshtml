@model IEnumerable<ProyectoZetino.WebMVC.Models.TipoExamenDto>

@{
    ViewData["Title"] = "Gestión de Tipos de Examen";
    string filtroActual = ViewData["CurrentFilter"] as string;
}

<div class="card shadow-sm rounded-3">

    <div class="card-header py-3 d-flex justify-content-between align-items-center flex-wrap">
        <h5 class="m-0 fw-bold text-primary">
            <i class="bi bi-flask me-2"></i> Gestión de Tipos de Examen
        </h5>
        <a class="btn btn-success" href="/TipoExamen/Create">
            <i class="bi bi-plus-circle"></i> Nuevo Tipo
        </a>
    </div>

    <div class="card-body">
        <div class="mb-4">
            <div class="input-group">
                <input id="txtSearch" type="text" class="form-control"
                       placeholder="Buscar por nombre o descripción..."
                       value="@filtroActual" />
                <button class="btn btn-outline-secondary" id="btnClear">
                    <i class="bi bi-x-circle"></i> Limpiar
                </button>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Nombre</th>
                        <th>Descripción</th>
                        <th>Precio</th>
                        <th>Estado</th>
                        <th class="text-end">Acciones</th>
                    </tr>
                </thead>
                <tbody id="tiposBody">
                    @foreach (var t in Model)
                    {
                        <tr class="@(t.Estado ? "" : "table-secondary text-muted")">
                            <td>@t.Nombre</td>
                            <td>@t.Descripcion</td>
                            <td>$@t.Precio</td>
                            <td>
                                @if (t.Estado)
                                {
                                    <span class="badge bg-success-subtle text-success-emphasis">Activo</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger-subtle text-danger-emphasis">Inactivo</span>
                                }
                            </td>
                            <td class="text-end text-nowrap">
                                <a class="btn btn-sm btn-outline-primary me-1" href="/TipoExamen/Edit/@t.IdTipoExamen">
                                    <i class="bi bi-pencil-fill"></i>
                                </a>
                                <a class="btn btn-sm btn-outline-danger" href="/TipoExamen/Delete/@t.IdTipoExamen">
                                    <i class="bi bi-trash-fill"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script>
    (() => {
        const input = document.getElementById('txtSearch');
        const clear = document.getElementById('btnClear');
        const tbody = document.getElementById('tiposBody');

        const N = t => (t || '').toLowerCase().normalize('NFD').replace(/[\u0300-\u036f]/g,'');

        input.addEventListener('input', () => {
            const q = N(input.value);
            Array.from(tbody.rows).forEach(tr => {
                const text = N(tr.textContent);
                tr.style.display = !q || text.includes(q) ? '' : 'none';
            });
        });

        clear.addEventListener('click', () => { input.value = ''; input.dispatchEvent(new Event('input')); });
    })();
</script>

