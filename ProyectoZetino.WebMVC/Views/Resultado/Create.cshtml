@model ProyectoZetino.WebMVC.Models.ResultadoDto
@{
    ViewData["Title"] = "Nuevo Resultado";
}

<div class="card shadow-sm rounded-3">
    <div class="card-header py-3">
        <h5 class="m-0 fw-bold" style="color: #0b5e6f;">
            <i class="bi bi-file-earmark-plus-fill me-2"></i>
            Registrar Nuevo Resultado
        </h5>
    </div>
    <div class="card-body">

        <form asp-action="Create" class="mt-3">

            <div class="mb-3">
                <label asp-for="IdExamen" class="form-label"></label>
                <select asp-for="IdExamen" class="form-select" asp-items="ViewBag.Examenes">
                    <option value="">-- Seleccione un Examen --</option>
                </select>
                <span asp-validation-for="IdExamen" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="FechaEntrega" class="form-label"></label>
                <input asp-for="FechaEntrega" class="form-control" type="date" />
                <span asp-validation-for="FechaEntrega" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ArchivoResultado" class="form-label"></label>
                <input asp-for="ArchivoResultado" class="form-control" placeholder="Ej: /archivos/resultados/doc-001.pdf" />
                <span asp-validation-for="ArchivoResultado" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Observaciones" class="form-label"></label>
                <textarea asp-for="Observaciones" class="form-control" rows="3" placeholder="Observaciones generales sobre el resultado..."></textarea>
                <span asp-validation-for="Observaciones" class="text-danger"></span>
            </div>

            <hr />

            <button type="submit" class="btn btn-success">
                <i class="bi bi-check-circle me-1"></i> Crear Resultado
            </button>
            <a class="btn btn-secondary" href="/Resultado">
                <i class="bi bi-x-circle me-1"></i> Cancelar
            </a>
        </form>

    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}