@model IEnumerable<ProyectoZetino.WebMVC.Models.ResultadoDto>
@{
    ViewData["Title"] = "Gestión de Resultados";
    string filtroActual = ViewData["CurrentFilter"] as string;

    // Obtener la lista de exámenes que cargamos desde el Controller
    var listaExamenes = (ViewBag.ListaExamenes as IEnumerable<ProyectoZetino.WebMVC.Models.ExamenDto>) ?? new List<ProyectoZetino.WebMVC.Models.ExamenDto>();
}

<div class="card shadow-sm rounded-3">

    <div class="card-header py-3 d-flex flex-wrap justify-content-between align-items-center">
        <h5 class="m-0 fw-bold" style="color: #0b5e6f;">
            <i class="bi bi-file-earmark-medical me-2"></i>
            Gestión de Resultados
        </h5>
        <a class="btn btn-success btn-icon-split" href="/Resultado/Create">
            <span class="icon text-white-50"><i class="bi bi-plus-circle"></i></span>
            <span class="text">Nuevo Resultado</span>
        </a>
    </div>

    <div class="card-body">

        <!-- 🔍 Filtro -->
        <div class="mb-4">
            <div class="input-group">
                <input id="txtSearch" type="text" class="form-control"
                       placeholder="Filtrar por examen, observaciones..."
                       value="@filtroActual" />
                <button type="button" class="btn btn-outline-secondary" id="btnClear">
                    <i class="bi bi-x-circle"></i> Limpiar
                </button>
            </div>
            <small class="text-muted">Puedes buscar, por ejemplo: <em>orina</em></small>
        </div>

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger">@TempData["Error"]</div>
        }
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success">@TempData["Success"]</div>
        }

        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Examen</th>
                        <th>Fecha Entrega</th>
                        <th>Observaciones</th>
                        <th>Archivo</th>
                        <th>Estado</th>
                        <th class="text-end">Acciones</th>
                    </tr>
                </thead>
                <tbody id="resultadosBody">
                    @foreach (var r in Model)
                    {
                        // Buscar el nombre del examen usando la lista del ViewBag
                        var descripcionExamen = listaExamenes
                        .FirstOrDefault(e => e.IdExamen == r.IdExamen)?.Descripcion
                        ?? ("ID: " + r.IdExamen);

                        <tr class="@(r.Estado ? "" : "table-secondary text-muted")">
                            <td class="col-examen">@descripcionExamen</td>
                            <td class="col-fecha">@r.FechaEntrega.ToString("dd/MM/yyyy")</td>
                            <td class="col-observaciones">@r.Observaciones</td>
                            <td class="col-archivo">
                                @if (!string.IsNullOrWhiteSpace(r.ArchivoResultado))
                                {
                                    <a href="@r.ArchivoResultado" target="_blank" class="btn btn-sm btn-outline-info">
                                        <i class="bi bi-box-arrow-up-right me-1"></i> Ver
                                    </a>
                                }
                                else
                                {
                                    <span class="text-muted">Sin archivo</span>
                                }
                            </td>
                            <td>
                                @if (r.Estado)
                                {
                                    <span class="badge bg-success-subtle text-success-emphasis rounded-pill">Activo</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger-subtle text-danger-emphasis rounded-pill">Inactivo</span>
                                }
                            </td>
                            <td class="text-end text-nowrap">
                                <!-- 📝 Editar -->
                                <a class="btn btn-sm btn-outline-primary"
                                   href="/Resultado/Edit/@r.IdResultado"
                                   title="Editar">
                                    <i class="bi bi-pencil-fill"></i>
                                </a>

                                <!-- 🔄 Cambiar estado -->
                                @if (r.Estado)
                                {
                                    <a href="/Resultado/ToggleEstado/@r.IdResultado"
                                       class="btn btn-sm btn-outline-danger"
                                       title="Desactivar">
                                        <i class="bi bi-toggle-off"></i>
                                    </a>
                                }
                                else
                                {
                                    <a href="/Resultado/ToggleEstado/@r.IdResultado"
                                       class="btn btn-sm btn-outline-success"
                                       title="Activar">
                                        <i class="bi bi-toggle-on"></i>
                                    </a>
                                }

                                <!-- 🧾 Comprobante en modal (HTML) -->
                                <a class="btn btn-sm btn-outline-secondary"
                                   href="javascript:void(0);"
                                   onclick="abrirComprobante(@r.IdResultado)"
                                   title="Ver comprobante">
                                    <i class="bi bi-printer"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr id="noRows" style="display:none;">
                        <td colspan="6" class="text-center text-muted">Sin resultados.</td>
                    </tr>
                </tfoot>
            </table>
        </div>

        <nav class="mt-3">
            <ul id="pager" class="pagination pagination-sm justify-content-center mb-0"></ul>
        </nav>

    </div>
</div>

<!-- 🧠 Script: filtro + paginación -->
<script>
    (() => {
        const input = document.getElementById('txtSearch');
        const clear = document.getElementById('btnClear');
        const tbody = document.getElementById('resultadosBody');
        const noRows = document.getElementById('noRows');
        const pager = document.getElementById('pager');

        let page = 1;
        const perPage = 10;

        const N = t => (t || '').toString().toLowerCase()
            .normalize('NFD').replace(/[\u0300-\u036f]/g, '');

        function getVisibleRows() {
            const q = N(input.value.trim());
            const rows = Array.from(tbody.rows);
            rows.forEach(tr => {
                const examen = N(tr.querySelector('.col-examen')?.textContent);
                const obs = N(tr.querySelector('.col-observaciones')?.textContent);
                const show = !q || (examen && examen.includes(q)) || (obs && obs.includes(q));
                tr.dataset.visible = show ? '1' : '0';
            });
            return rows.filter(r => r.dataset.visible !== '0');
        }

        function renderPage() {
            const visibles = getVisibleRows();
            const total = visibles.length;
            const totalPages = Math.max(1, Math.ceil(total / perPage));
            if (page > totalPages) page = totalPages;

            Array.from(tbody.rows).forEach(r => r.style.display = 'none');

            const start = (page - 1) * perPage;
            visibles.slice(start, start + perPage).forEach(r => r.style.display = '');

            noRows.style.display = total === 0 ? '' : 'none';
            buildPager(totalPages);
        }

        function buildPager(totalPages) {
            pager.innerHTML = '';
            if (totalPages <= 1) return;

            const addItem = (label, disabled, active, goTo) => {
                const li = document.createElement('li');
                li.className = `page-item${disabled ? ' disabled' : ''}${active ? ' active' : ''}`;
                const a = document.createElement('a');
                a.className = 'page-link';
                a.href = '#';
                a.textContent = label;
                if (!disabled && !active) {
                    a.addEventListener('click', e => {
                        e.preventDefault();
                        page = goTo;
                        renderPage();
                    });
                }
                li.appendChild(a);
                pager.appendChild(li);
            };

            addItem('«', page === 1, false, page - 1);

            const windowSize = 7;
            let start = Math.max(1, page - Math.floor(windowSize / 2));
            let end = Math.min(totalPages, start + windowSize - 1);
            start = Math.max(1, end - windowSize + 1);

            for (let i = start; i <= end; i++)
                addItem(i.toString(), false, i === page, i);

            addItem('»', page === totalPages, false, page + 1);
        }

        input.addEventListener('input', () => { page = 1; renderPage(); });
        clear.addEventListener('click', () => {
            input.value = '';
            page = 1;
            renderPage();
            input.focus();
        });

        renderPage();
    })();
</script>

<!-- 🪟 Modal para comprobante de resultado -->
<div class="modal fade" id="modalResultado" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content" id="modalResultadoContent">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="bi bi-file-earmark-text me-2"></i> Comprobante de Resultado
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-body" id="modalResultadoBody">
                <div class="text-center text-muted py-3">
                    Cargando comprobante...
                </div>
            </div>
            <div class="modal-footer">
                <button type="button"
                        class="btn btn-outline-secondary"
                        data-bs-dismiss="modal">
                    Cerrar
                </button>
                <button type="button"
                        class="btn btn-primary"
                        onclick="imprimirComprobante()">
                    <i class="bi bi-printer"></i> Imprimir / Guardar PDF
                </button>
            </div>
        </div>
    </div>
</div>

<style>

     {
        body *

    {
        visibility: hidden;
    }

    #modalResultadoContent,
    #modalResultadoContent * {
        visibility: visible;
    }

    #modalResultado {
        position: absolute;
        inset: 0;
        display: block !important;
    }

    }
</style>

<script>
    // Cargar el comprobante dentro del modal
    function abrirComprobante(idResultado) {
        const body = document.getElementById('modalResultadoBody');
        body.innerHTML = '<div class="text-center text-muted py-3">Cargando comprobante...</div>';

        fetch(`/Resultado/ComprobanteHtml/${idResultado}`)
            .then(r => {
                if (!r.ok) throw new Error('Error al cargar el comprobante');
                return r.text();
            })
            .then(html => {
                body.innerHTML = html;
                const modal = new bootstrap.Modal(document.getElementById('modalResultado'));
                modal.show();
            })
            .catch(err => {
                console.error(err);
                body.innerHTML = '<div class="alert alert-danger">No se pudo cargar el comprobante.</div>';
                const modal = new bootstrap.Modal(document.getElementById('modalResultado'));
                modal.show();
            });
    }

    function imprimirComprobante() {
        window.print();
    }
</script>

