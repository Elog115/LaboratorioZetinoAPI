@model IEnumerable<ProyectoZetino.WebMVC.Models.UsuarioDto>

@{
    ViewData["Title"] = "Gestión de Usuarios";
    string filtroActual = ViewData["CurrentFilter"] as string;
}

<div class="card shadow-sm rounded-3">

    <!-- Encabezado -->
    <div class="card-header py-3 d-flex flex-wrap justify-content-between align-items-center">
        <h5 class="m-0 fw-bold" style="color: #0b5e6f;">
            <i class="bi bi-people-fill me-2"></i>
            Gestión de Usuarios
        </h5>

        <a class="btn btn-success btn-icon-split" href="/Usuario/Create">
            <span class="icon text-white-50">
                <i class="bi bi-person-plus-fill"></i>
            </span>
            <span class="text">Nuevo Usuario</span>
        </a>
    </div>

    <!-- Cuerpo -->
    <div class="card-body">

        <!-- Buscador -->
        <form asp-action="Index" method="get" class="mb-4">
            <div class="input-group">
                <input type="text" name="searchTerm" class="form-control"
                       placeholder="Buscar por nombre, apellido o correo..."
                       value="@filtroActual" />

                <button class="btn btn-primary" type="submit">
                    <i class="bi bi-search"></i> Buscar
                </button>

                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-x-circle"></i> Limpiar
                </a>
            </div>
        </form>

        <!-- Mensaje de error -->
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger">@TempData["Error"]</div>
        }

        <!-- Tabla -->
        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Nombre</th>
                        <th>Apellido</th>
                        <th>Correo</th>
                        <th>Teléfono</th>
                        <th>Rol</th>
                        <th>Fecha Nacimiento</th>
                        <th>Estado</th>
                        <th class="text-end">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var u in Model)
                    {
                        <tr class="@(u.Estado ? "" : "table-secondary text-muted")">
                            <td>@u.Nombre</td>
                            <td>@u.Apellido</td>
                            <td>@u.Email</td>
                            <td>@u.Telefono</td>
                            <td>@u.NombreRol</td>
                            <td>@u.FechaNacimiento?.ToString("dd/MM/yyyy")</td>


                            <td>
                                @if (u.Estado)
                                {
                                    <span class="badge bg-success-subtle text-success-emphasis rounded-pill">Activo</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger-subtle text-danger-emphasis rounded-pill">Inactivo</span>
                                }
                            </td>
                            <td class="text-end text-nowrap">
                                <!-- Botón Editar -->
                                <a class="btn btn-sm btn-outline-primary me-1" href="/Usuario/Edit/@u.IdUsuario" title="Editar">
                                    <i class="bi bi-pencil-fill"></i>
                                </a>

                                <!-- Botón Activar/Desactivar -->
                                @if (u.Estado)
                                {
                                    <a href="/Usuario/ToggleEstado/@u.IdUsuario" class="btn btn-sm btn-outline-danger" title="Desactivar">
                                        <i class="bi bi-toggle-off"></i>
                                    </a>
                                }
                                else
                                {
                                    <a href="/Usuario/ToggleEstado/@u.IdUsuario" class="btn btn-sm btn-outline-success" title="Activar">
                                        <i class="bi bi-toggle-on"></i>
                                    </a>
                                }
                            </td>
                        </tr>
                    }

                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="8" class="text-center text-muted">
                                No se encontraron usuarios.
                                @if (!string.IsNullOrEmpty(filtroActual))
                                {
                                    <span>(Intente limpiar el filtro de búsqueda)</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
