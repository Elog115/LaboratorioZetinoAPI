@model ProyectoZetino.WebMVC.Models.UsuarioDto

@{
    ViewData["Title"] = "Eliminar Usuario";
}

<h2>Eliminar Usuario</h2>

<div class="alert alert-warning">
    ¿Seguro que deseas eliminar este usuario?
</div>

<dl class="row">
    <dt class="col-sm-2">ID</dt>
    <dd class="col-sm-10">@Model.IdUsuario</dd>

    <dt class="col-sm-2">Nombre</dt>
    <dd class="col-sm-10">@Model.Nombre</dd>

    <dt class="col-sm-2">Correo</dt>
    <dd class="col-sm-10">@Model.Email</dd>

    <dt class="col-sm-2">Rol</dt>
    <dd class="col-sm-10">@Model.NombreRol</dd>
</dl>

<form asp-action="DeleteConfirmed" method="post" id="deleteForm">
    <input type="hidden" asp-for="IdUsuario" />
    <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#confirmDelete">
        Eliminar
    </button>
    <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
</form>

<!-- Modal -->
<div class="modal fade" id="confirmDelete" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirmar eliminación</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Esta acción eliminará al usuario permanentemente. ¿Deseas continuar?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-danger" id="confirmBtn">Eliminar</button>
            </div>
        </div>
    </div>
</div>

<script>
    document.getElementById('confirmBtn').addEventListener('click', function(){
        document.getElementById('deleteForm').submit();
    });
</script>

