@model ProyectoZetino.WebMVC.Models.CitaDto

@{
    var nombrePaciente = ViewBag.NombrePaciente as string ?? "Paciente no especificado";
    var fechaTexto = Model.FechaHora?.ToString("dd/MM/yyyy HH:mm") ?? "Sin fecha";
    var estadoTexto = Model.Estado ? "Activa" : "Cancelada";
}

<div class="p-3">

    <div class="d-flex justify-content-between align-items-center mb-3 border-bottom pb-2">
        <div>
            <h5 class="mb-0" style="color:#0b5e6f;">Laboratorio Zetino</h5>
            <small class="text-muted">Sistema SisLabZetino</small>
        </div>
        <div class="text-end">
            <div class="fw-bold">Comprobante de Cita</div>
            <small class="text-muted">Emisión: @DateTime.Now.ToString("dd/MM/yyyy HH:mm")</small>
        </div>
    </div>

    <dl class="row mb-0">
        <dt class="col-sm-4">ID Cita:</dt>
        <dd class="col-sm-8">@Model.IdCita</dd>

        <dt class="col-sm-4">Paciente:</dt>
        <dd class="col-sm-8">@nombrePaciente</dd>

        <dt class="col-sm-4">Fecha y hora:</dt>
        <dd class="col-sm-8">@fechaTexto</dd>

        <dt class="col-sm-4">Motivo / Descripción:</dt>
        <dd class="col-sm-8">@Model.Descripcion</dd>

        <dt class="col-sm-4">Estado:</dt>
        <dd class="col-sm-8">
            @if (Model.Estado)
            {
                <span class="badge bg-success-subtle text-success-emphasis rounded-pill">Activa</span>
            }
            else
            {
                <span class="badge bg-danger-subtle text-danger-emphasis rounded-pill">Cancelada</span>
            }
        </dd>
    </dl>

</div>
