@model IEnumerable<ProyectoZetino.WebMVC.Models.CitaDto>
@{
    ViewData["Title"] = "Gestión de Citas";
    string filtroActual = ViewData["CurrentFilter"] as string;
}

<div class="card shadow-sm rounded-3">

    <div class="card-header py-3 d-flex flex-wrap justify-content-between align-items-center">
        <h5 class="m-0 fw-bold" style="color: #0b5e6f;">
            
            <i class="bi bi-calendar2-check me-2"></i>
            Gestión de Citas
        </h5>
        <a class="btn btn-success btn-icon-split" href="/Cita/Create">
            <span class="icon text-white-50"><i class="bi bi-plus-circle"></i></span>
            <span class="text">Nueva Cita</span>
        </a>
    </div>

    <div class="card-body">

        <!-- 🔍 Filtro -->
        <div class="mb-4">
            <div class="input-group">
                <input id="txtSearch" type="text" class="form-control"
                       placeholder="Filtrar por paciente o motivo..."
                       value="@filtroActual" />
                <button type="button" class="btn btn-outline-secondary" id="btnClear">
                    <i class="bi bi-x-circle"></i> Limpiar
                </button>
            </div>
            <small class="text-muted">Puedes buscar aquí, por ejemplo: <em>juan</em></small>
        </div>

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger">@TempData["Error"]</div>
        }
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success">@TempData["Success"]</div>
        }

        <!-- 📋 Tabla -->
        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Fecha/Hora</th>
                        <th>Paciente</th>
                        <th>Motivo</th>
                        <th>Estado</th>
                        <th class="text-end">Acciones</th>
                    </tr>
                </thead>
                <tbody id="citasBody">
                    @foreach (var c in Model)
                    {
                        <tr class="@(c.Estado ? "" : "table-secondary text-muted")">
                            <td class="col-fecha">@c.FechaHora?.ToString("dd/MM/yyyy HH:mm")</td>
                            <td class="col-paciente">@c.NombreUsuario</td>
                            <td class="col-descripcion">@c.Descripcion</td>
                            <td>
                                @if (c.Estado)
                                {
                                    <span class="badge bg-success-subtle text-success-emphasis rounded-pill">Activa</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger-subtle text-danger-emphasis rounded-pill">Cancelada</span>
                                }
                            </td>
                            <td class="text-end text-nowrap">
                                <!-- 📝 Editar -->
                                <a class="btn btn-sm btn-outline-primary" href="/Cita/Edit/@c.IdCita" title="Editar">
                                    <i class="bi bi-pencil-fill"></i>
                                </a>

                                <!-- 🔄 Cambiar estado (mismo estilo que Rol) -->
                                @if (c.Estado)
                                {
                                    <!-- Si la cita está ACTIVA → MOSTRAR botón ROJO -->
                                    <a href="/Cita/ToggleEstado/@c.IdCita"
                                       class="btn btn-sm btn-outline-danger"
                                       title="Desactivar">
                                        <i class="bi bi-toggle-off"></i>
                                    </a>
                                }
                                else
                                {
                                    <!-- Si la cita está CANCELADA → MOSTRAR botón VERDE -->
                                    <a href="/Cita/ToggleEstado/@c.IdCita"
                                       class="btn btn-sm btn-outline-success"
                                       title="Activar">
                                        <i class="bi bi-toggle-on"></i>
                                    </a>
                                }


                                <!-- 🖨️ Comprobante -->
                                <a class="btn btn-sm btn-outline-secondary"
                                   href="/Cita/Comprobante/@c.IdCita"
                                   title="Imprimir comprobante">
                                    <i class="bi bi-printer"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr id="noRows" style="display:none;">
                        <td colspan="5" class="text-center text-muted">Sin resultados.</td>
                    </tr>
                </tfoot>
            </table>
        </div>

        <!-- 📄 Paginación -->
        <nav class="mt-3">
            <ul id="pager" class="pagination pagination-sm justify-content-center mb-0"></ul>
        </nav>

    </div>
</div>

<!-- 🧠 Script: filtro + paginación -->
<script>
    (() => {
      const input   = document.getElementById('txtSearch');
      const clear   = document.getElementById('btnClear');
      const tbody   = document.getElementById('citasBody');
      const noRows  = document.getElementById('noRows');
      const pager   = document.getElementById('pager');

      let page = 1;
      const perPage = 10;

      const N = t => (t || '').toString().toLowerCase()
                      .normalize('NFD').replace(/[\u0300-\u036f]/g,'');

      function getVisibleRows(){
        const q = N(input.value.trim());
        const rows = Array.from(tbody.rows);
        rows.forEach(tr => {
          const paciente = N(tr.querySelector('.col-paciente')?.textContent);
          const desc     = N(tr.querySelector('.col-descripcion')?.textContent);
          const show     = !q || (paciente && paciente.includes(q)) || (desc && desc.includes(q));
          tr.dataset.visible = show ? '1' : '0';
        });
        return rows.filter(r => r.dataset.visible !== '0');
      }

      function renderPage(){
        const visibles = getVisibleRows();
        const total = visibles.length;
        const totalPages = Math.max(1, Math.ceil(total / perPage));
        if (page > totalPages) page = totalPages;

        Array.from(tbody.rows).forEach(r => r.style.display = 'none');
        const start = (page - 1) * perPage;
        visibles.slice(start, start + perPage).forEach(r => r.style.display = '');

        noRows.style.display = total === 0 ? '' : 'none';
        buildPager(totalPages);
      }

      function buildPager(totalPages){
        pager.innerHTML = '';
        if (totalPages <= 1) return;

        const addItem = (label, disabled, active, goTo) => {
          const li = document.createElement('li');
          li.className = `page-item${disabled ? ' disabled' : ''}${active ? ' active' : ''}`;
          const a = document.createElement('a');
          a.className = 'page-link';
          a.href = '#';
          a.textContent = label;
          if (!disabled && !active) {
            a.addEventListener('click', e => { e.preventDefault(); page = goTo; renderPage(); });
          }
          li.appendChild(a);
          pager.appendChild(li);
        };

        addItem('«', page === 1, false, page - 1);

        const windowSize = 7;
        let start = Math.max(1, page - Math.floor(windowSize / 2));
        let end   = Math.min(totalPages, start + windowSize - 1);
        start     = Math.max(1, end - windowSize + 1);

        for (let i = start; i <= end; i++) addItem(i.toString(), false, i === page, i);

        addItem('»', page === totalPages, false, page + 1);
      }

      input.addEventListener('input', () => { page = 1; renderPage(); });
      clear.addEventListener('click', () => { input.value = ''; page = 1; renderPage(); input.focus(); });

      renderPage();
    })();
</script>
