@model ProyectoZetino.WebMVC.Models.ExamenDto
@{
    ViewData["Title"] = "Editar Examen";
}

<div class="container mt-4">
    <div class="card shadow-sm p-4 rounded-4">
        <h3 class="mb-3 text-primary">
            <i class="bi bi-pencil-square"></i> Editar Examen
        </h3>
        <hr />

        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="IdExamen" /> @* Hidden ID for editing *@

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="IdOrdenExamen" class="form-label fw-semibold">Orden</label>
                    <select asp-for="IdOrdenExamen" class="form-select" asp-items="ViewBag.Ordenes">
                        <option value="">Seleccione una orden...</option>
                    </select>
                    <span asp-validation-for="IdOrdenExamen" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="IdTipoExamen" class="form-label fw-semibold">Tipo de Examen</label>
                    <select asp-for="IdTipoExamen" class="form-select" asp-items="ViewBag.TiposExamen">
                        <option value="">Seleccione un tipo...</option>
                    </select>
                    <span asp-validation-for="IdTipoExamen" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="Descripcion" class="form-label fw-semibold"></label>
                <input asp-for="Descripcion" class="form-control" placeholder="Ingrese una descripción del examen" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="TiempoEstimado" class="form-label fw-semibold">Tiempo Estimado (minutos)</label>
                    <input asp-for="TiempoEstimado" class="form-control" type="number" placeholder="Minutos" />
                    <span asp-validation-for="TiempoEstimado" class="text-danger"></span>
                </div>

                @* Estado como checkbox, adaptado del diseño de "Nuevo Examen" *@
                <div class="col-md-6 mb-3 form-check mt-4">
                    <input asp-for="Estado" class="form-check-input" type="checkbox" />
                    <label asp-for="Estado" class="form-check-label fw-semibold"></label>
                </div>
            </div>

            <div class="d-flex justify-content-end gap-2 mt-4">
                <button type="submit" class="btn btn-success px-4 rounded-pill shadow-sm">
                    <i class="bi bi-save"></i> Guardar Cambios
                </button>
                <a asp-action="Index" class="btn btn-secondary px-4 rounded-pill shadow-sm">
                    <i class="bi bi-x-circle"></i> Cancelar
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
