@model IEnumerable<ProyectoZetino.WebMVC.Models.ExamenDto>

@{
    ViewData["Title"] = "Gestión de Exámenes";
    string filtroActual = ViewData["CurrentFilter"] as string;
}

<div class="card shadow-sm rounded-3">

    <!-- Encabezado -->
    <div class="card-header py-3 d-flex flex-wrap justify-content-between align-items-center">
        <h5 class="m-0 fw-bold" style="color: #0b5e6f;">
            <i class="bi bi-clipboard2-data me-2"></i>
            Gestión de Exámenes
        </h5>

        <a class="btn btn-success btn-icon-split" href="/Examen/Create">
            <span class="icon text-white-50">
                <i class="bi bi-plus-circle"></i>
            </span>
            <span class="text">Nuevo Examen</span>
        </a>
    </div>

    <!-- Cuerpo -->
    <div class="card-body">

        <!-- Buscador -->
        <div class="mb-4">
            <div class="input-group">
                <input id="txtSearch" type="text" name="searchTerm" class="form-control"
                       placeholder="Buscar por descripción, tipo o ID..."
                       value="@filtroActual" />

                <button type="button" class="btn btn-outline-secondary" id="btnClear">
                    <i class="bi bi-x-circle"></i> Limpiar
                </button>
            </div>
            <small class="text-muted">Puedes buscar, por ejemplo: <em>Sangre</em> o <em>Química</em></small>
        </div>

        <!-- Mensaje de error -->
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger">@TempData["Error"]</div>
        }

        <!-- Tabla -->
        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>ID</th>
                        <th>Orden</th>
                        <th>Tipo</th>
                        <th>Descripción</th>
                        <th>Tiempo Estimado (min)</th>
                        <th>Estado</th>
                        <th class="text-end">Acciones</th>
                    </tr>
                </thead>
                <tbody id="examenesBody">
                    @foreach (var e in Model)
                    {
                        <tr class="@(e.Estado ? "" : "table-secondary text-muted")">
                            <td>@e.IdExamen</td>
                            <td>@e.NombreOrden</td>
                            <td>@e.NombreTipoExamen</td>
                            <td>@e.Descripcion</td>
                            <td>@e.TiempoEstimado</td>
                            <td>
                                @if (e.Estado)
                                {
                                    <span class="badge bg-success-subtle text-success-emphasis rounded-pill">Activo</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger-subtle text-danger-emphasis rounded-pill">Inactivo</span>
                                }
                            </td>
                            <td class="text-end text-nowrap">
                                <a class="btn btn-sm btn-outline-primary me-1" href="/Examen/Edit/@e.IdExamen" title="Editar">
                                    <i class="bi bi-pencil-fill"></i>
                                </a>

                                @if (e.Estado)
                                {
                                    <a href="/Examen/ToggleEstado/@e.IdExamen" class="btn btn-sm btn-outline-danger" title="Desactivar">
                                        <i class="bi bi-toggle-off"></i>
                                    </a>
                                }
                                else
                                {
                                    <a href="/Examen/ToggleEstado/@e.IdExamen" class="btn btn-sm btn-outline-success" title="Activar">
                                        <i class="bi bi-toggle-on"></i>
                                    </a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr id="noRows" style="display:none;">
                        <td colspan="7" class="text-center text-muted">Sin resultados.</td>
                    </tr>
                </tfoot>
            </table>
        </div>

        <!-- Paginación -->
        <nav class="mt-3">
            <ul id="pager" class="pagination pagination-sm justify-content-center mb-0"></ul>
        </nav>
    </div>
</div>

<!-- 🔹 Script de búsqueda dinámica con paginación -->
<script>
    (() => {
      const input  = document.getElementById('txtSearch');
      const clear  = document.getElementById('btnClear');
      const tbody  = document.getElementById('examenesBody');
      const noRows = document.getElementById('noRows');
      const pager  = document.getElementById('pager');

      let page = 1;
      const perPage = 10;

      const N = t => (t || '').toString().toLowerCase()
                    .normalize('NFD').replace(/[\u0300-\u036f]/g,'');

      function getVisibleRows(){
        const q = N(input.value.trim());
        const rows = Array.from(tbody.rows);
        rows.forEach(tr => {
          const text = N(tr.textContent);
          tr.dataset.visible = (!q || text.includes(q)) ? '1' : '0';
        });
        return rows.filter(r => r.dataset.visible !== '0');
      }

      function renderPage(){
        const visibles = getVisibleRows();
        const total = visibles.length;
        const totalPages = Math.max(1, Math.ceil(total / perPage));
        if (page > totalPages) page = totalPages;

        Array.from(tbody.rows).forEach(r => r.style.display = 'none');

        const start = (page - 1) * perPage;
        visibles.slice(start, start + perPage).forEach(r => r.style.display = '');

        noRows.style.display = total === 0 ? '' : 'none';

        buildPager(totalPages);
      }

      function buildPager(totalPages){
        pager.innerHTML = '';
        if (totalPages <= 1) return;

        const addItem = (label, disabled, active, goTo) => {
          const li = document.createElement('li');
          li.className = `page-item${disabled ? ' disabled' : ''}${active ? ' active' : ''}`;
          const a = document.createElement('a');
          a.className = 'page-link';
          a.href = '#';
          a.textContent = label;
          if (!disabled && !active) {
            a.addEventListener('click', e => { e.preventDefault(); page = goTo; renderPage(); });
          }
          li.appendChild(a);
          pager.appendChild(li);
        };

        addItem('«', page === 1, false, page - 1);

        const windowSize = 7;
        let start = Math.max(1, page - Math.floor(windowSize / 2));
        let end   = Math.min(totalPages, start + windowSize - 1);
        start     = Math.max(1, end - windowSize + 1);

        for (let i = start; i <= end; i++) addItem(i.toString(), false, i === page, i);

        addItem('»', page === totalPages, false, page + 1);
      }

      input.addEventListener('input', () => { page = 1; renderPage(); });
      clear.addEventListener('click', () => { input.value = ''; page = 1; renderPage(); input.focus(); });

      renderPage();
    })();
</script>
